<%=javascript_include_tag Ckeditor.cdn_url %>
<div class="container">
  <div class="row">
        <%= form_for :users ,:url => '/base/connectToMail',:method =>'post' do |f|%>
            <div class="col-sm-4">
                <%= f.label :"to :" %>
                <%= f.email_field(:to ,size:50)%><br><br>
                <%= f.label :"subject :" %>
                <%= f.text_field :subject,size:50 %><br><br>
                <%=f.label :"content :"%><br>
                <%=f.cktext_area :content %><br>
                <%= f.submit "compose" %>
                </div>
        <%end%>
    </div>
</div>  